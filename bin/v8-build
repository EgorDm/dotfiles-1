if [[ $# -eq 0 ]] ; then
    args=( x64.debug )
else
    args=( "$@" )
fi

export CC='clang -ferror-limit=1'
export CXX='clang++ -ferror-limit=1'
export GYP_DEFINES='clang=1'
exec make console=readline werror=no -j4 "${args[@]}"
