alot_term_exe="$(dirname "$0")/alot"
if ! [ -x "${alot_term_exe}" ] ; then
	alot_term_exe=dwt
fi

unset TMUX
export TERM=xterm-256color
export DWT_SINGLE_WINDOW_PROCESS=1
exec "${alot_term_exe}" \
	--title='alot - Compose' \
	--workdir="${HOME}" \
	--no-title-updates \
	--scrollback=0 \
	--command="$*"
