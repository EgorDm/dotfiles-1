#! /usr/bin/env zsh

FORMAT_LOAD=' load [%1min %5min %15min] '
FORMAT_DISK='[%avail] '
FORMAT_WIFI_UP=' %essid [%quality] '
FORMAT_WIFI_DOWN=' [wifi] '
BATT_STATUS_CHR='[C]'
BATT_STATUS_BAT='[B]'
BATT_STATUS_FULL='[F]'

if [[ -n $(fc-list Icons) ]] ; then
	FORMAT_LOAD='   %1min %5min %15min '
	FORMAT_DISK='  %avail '
	FORMAT_WIFI_UP=' %quality   %essid '
	FORMAT_WIFI_DOWN='   down '
	BATT_STATUS_CHR=' '
	BATT_STATUS_BAT=' '
	BATT_STATUS_FULL=' '
fi

cat <<EOF
general {
        colors = true
        interval = 5
}
EOF

#order += "ipv6"
echo 'order += "disk /"'
[[ -d /devel ]] && echo 'order += "disk /devel"'

cat <<EOF
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "${FORMAT_WIFI_UP}"
        format_down = "${FORMAT_WIFI_DOWN}"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = " %remaining %status %percentage "
        status_chr = "${BATT_STATUS_CHR}"
        status_bat = "${BATT_STATUS_BAT}"
        status_full = "${BATT_STATUS_FULL}"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = " %b %d, %H:%M "
}

load {
        format = "${FORMAT_LOAD}"
}

disk "/" {
        format = " / ${FORMAT_DISK}"
}
disk "/devel" {
	format = " /devel ${FORMAT_DISK}"
}
EOF
