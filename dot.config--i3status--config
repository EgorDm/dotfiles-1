#! /usr/bin/env zsh

cat <<EOF
general {
        colors = true
        interval = 5
}
EOF

#order += "ipv6"
echo 'order += "disk /"'
[[ -d /devel ]] && echo 'order += "disk /devel"'

cat <<EOF
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = " %quality   %essid "
        format_down = "   down "
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = " %remaining %status  %percentage "
        status_chr = ""
        status_bat = ""
        status_full = ""
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = " %b %d, %H:%M "
}

load {
        format = "   %1min %5min %15min "
}

disk "/" {
        format = " /   %avail "
}
disk "/devel" {
	format = " /devel   %avail "
}
EOF
